<launch>
  <param name="/use_sim_time" value="true"/>

  <!--param name="robot_description" textfile="$(find cartographer_ros)/urdf/adr.urdf" /-->

  <!--node name="robot_state_publisher" pkg="robot_state_publisher" type="robot_state_publisher"-->
    <!--param name="use_tf_static" value="false"/-->
    <!--param name="publish_frequency" value="50"/-->
  <!--/node-->

  <node name="map_server" pkg="map_server" type="map_server" args="$(find dr_2dnav)/map/mymap.yaml"/>

  <node pkg="tf" type="static_transform_publisher" name="odom_link_broadcaster" args="0 0 0 0 0 0 map odom 50" />
  <node pkg="tf" type="static_transform_publisher" name="laser_link_broadcaster" args="0 0 0 0 0 0 base_link horizontal_laser_link 50" />


  <!-- Run the map server --> 
  <!--node name="map_server" pkg="map_server" type="map_server" args="$(find my_map_package)/my_map.pgm my_map_resolution"/-->

  <!--- Run AMCL --> 
  <!--include file="$(find amcl)/examples/amcl_omni.launch" /-->

  <node pkg="move_base" type="move_base" respawn="false" name="move_base" output="screen">
    <rosparam file="$(find dr_2dnav)/costmap_common_params.yaml" command="load" ns="global_costmap" /> 
    <rosparam file="$(find dr_2dnav)/costmap_common_params.yaml" command="load" ns="local_costmap" />
    <rosparam file="$(find dr_2dnav)/local_costmap_params.yaml" command="load" />
    <rosparam file="$(find dr_2dnav)/global_costmap_params.yaml" command="load" /> 
    <rosparam file="$(find dr_2dnav)/base_local_planner_params.yaml" command="load" />
  </node>

</launch> 
